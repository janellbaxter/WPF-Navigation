<Page x:Class="WaterCreatures.Creatures"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WaterCreatures"
      mc:Ignorable="d" 
      d:DesignHeight="599" d:DesignWidth="597"
      Title="Creatures">

    <Grid x:Name="CreatureGrid" Loaded="CreatureGrid_Loaded">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="418*"/>
            <ColumnDefinition Width="179*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="Move" Content="Next" HorizontalAlignment="Left" Margin="260,387,0,0" VerticalAlignment="Top" Width="75" Click="Move_Click"/>
        <TextBlock x:Name="Information" HorizontalAlignment="Left" Height="323" Margin="30,30,0,0" TextWrapping="Wrap" Text="Strange and wonderful creatures roam the waters ...." VerticalAlignment="Top" Width="193"/>
        <Image x:Name="CreatureImage" HorizontalAlignment="Left" Height="270" Margin="260,63,0,0" VerticalAlignment="Top" Width="302" Grid.ColumnSpan="2"/>
        <Button x:Name="StartAdventure" Content="Start Adventure" HorizontalAlignment="Left" Margin="260,426,0,0" VerticalAlignment="Top" Width="100" Click="StartAdventure_Click"/>

    </Grid>
</Page>
